= form_for @payment do |f|
  - if @payment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@payment.errors.count, "error")} prohibited this payment from being saved:"
      %ul
        - @payment.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :payer_id
    = f.number_field :payer_id
  .field
    = f.label :recipient_id
    = f.number_field :recipient_id
  .field
    = f.label :amount
    = f.text_field :amount
  .field
    = f.label :paid_period_begins
    = f.date_select :paid_period_begins
  .field
    = f.label :paid_period_ends
    = f.date_select :paid_period_ends
  .actions
    = f.submit 'Save'
